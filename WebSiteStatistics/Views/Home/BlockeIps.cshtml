@model IEnumerable<WebSiteStatistics.Models.BlockedIpViewModel>
<div class="row">

    <div class="col-md-12">

        <div class="box">
            <div class="box-header">
                <span>
                    <span class="imgleft fa fa-table" aria-hidden="true"></span>
                    نمایش آمار بازدیدها به تفکیک کشور
                </span>

            </div>
            <div class="box-content">
               
                <div class="margin10">
                    @using (Html.BeginForm("AddIp", "Home", FormMethod.Post, new { @class = "form-inline" }))
                    {

                        <div class="form-group">
                            <label for="ipAddress">آدرس آی پی</label>
                            <input type="text" class="form-control" name="IpAddress" id="ipAddress">
                            <input type="submit" value="افزودن آدرس آی پی جدید" class="btn btn-primary" />
                        </div>




                    }


                </div>







                        <div class="table-responsive">
                            <table class="table table-hover table-bordered">
                                <caption>
                                    <div class="alert alert-danger alert-dismissable">
                                        <span class="fa fa-bolt"></span>
                                        <strong>توجه داشته باشید!</strong>
                                        با افزودن شماره آی پی ها به این لیست مانع از شمارش آنها در آمار خواهید شد.

                                    </div>

                                </caption>
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IpAddress)
                                        </th>
                                        <th>دستورات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="label label-warning">
                                                    @Html.DisplayFor(modelItem => item.IpAddress)
                                                </span>
                                            </td>
                                            <td>
                                                @Html.ActionLink("حذف", "DeleteIp", new { id = item.Id }, new { @class = "btn btn-danger" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>


            </div>



        </div>


    </div>

</div>

